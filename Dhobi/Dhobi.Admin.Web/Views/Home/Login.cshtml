
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/toastr/angular-toastr.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body ng-app="app" ng-controller="loginCtrl">
    <h1 class="text-center">Welcome to Dobi Admin</h1>

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="jumbotron">
                <form name="loginForm">
                    <fieldset style="padding: 15px">
                        <div class="form-group" ng-class="{ 'has-error': loginForm.username.$touched && loginForm.username.$invalid }">
                            <input type="text" name="username" class="form-control" placeholder="Username" required ng-model="Data.UserName">
                            <div class="help-block" ng-messages="loginForm.username.$error" ng-if="loginForm.username.$touched">
                                <p ng-message="required">UserName is required.</p>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{ 'has-error': loginForm.password.$touched && loginForm.password.$invalid }">
                            <input type="password" name="password" class="form-control" placeholder="Password" required ng-model="Data.Password" ng-minlength="6" ng-maxlength="64">
                            <div class="help-block" ng-messages="loginForm.password.$error" ng-if="loginForm.password.$touched">
                                <p ng-message="required">Password is required.</p>
                                <div ng-message="minlength">Minimum 6 character required.</div>
                                <div ng-message="maxlength">Maximum 64 character allowed.</div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success pull-right" ng-click="Methods.Login()" ng-disabled="loginForm.$invalid">Login</button>
                    </fieldset>
                </form>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>

    <script src="~/Scripts/urlConfig.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/WebApp/lib/angular.min.js"></script>
    <script src="~/WebApp/lib/angular-cookies.min.js"></script>
    <script src="~/WebApp/lib/ngStorage.min.js"></script>
    <script src="~/WebApp/lib/ngMessages.js"></script>
    <script src="~/Scripts/accountDirective.js"></script>
    <script src="~/WebApp/lib/plugins/toastr/angular-toastr.tpls.js"></script>
    <script src="~/WebApp/controllers/loginController.js"></script>
</body>
</html>